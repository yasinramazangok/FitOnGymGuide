@*
    Partial View
*@

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yapabilirsiniz</h3>
    <form method="post" action="/Comment/LeaveComment/" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Adınız</label>
            <input type="text" name="Name" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="Email" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea name="CommentText" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <input type="hidden" name="Date" value="@DateTime.Now.ToShortDateString()"/>
        <input type="hidden" name="BlogId" value="@ViewBag.Id" />
        <div class="form-group">
            <input type="submit" value="Ekle" class="btn btn-success">
        </div>
    </form>
</div>