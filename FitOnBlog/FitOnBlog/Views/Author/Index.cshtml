@using EntityLayer.Concretes
@model IEnumerable<Author>

@{
    ViewData["Title"] = "Index";
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" :
             User.IsInRole("Yazar") ? "~/Views/Shared/_AuthorLayout.cshtml" :
             "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="wrapper">
    <section class="content">
        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Yazarlar</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fas fa-minus"></i></button>
                </div>
            </div>
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    @item.Title
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b>@item.Name</b></h2>
                                            <p class="text-muted text-sm">@item.About</p>
                                            <p class="text-muted text-sm"><b>Uzmanlık Alanları : </b> @item.Expertises</p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span>@item.Email</li>
                                                <br />
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>@item.PhoneNumber</li>
                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="@item.ImageUrl" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="/Author/DeleteAuthor/@item.AuthorId" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-user"></i>Yazarı Sil
                                        </a>
                                        <a href="/Author/UpdateAuthor/@item.UserId" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-user"></i>Güncelle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <a href="/Account/Register/" class="btn btn-outline-success">Yeni Yazar Ekle</a>
</div>



