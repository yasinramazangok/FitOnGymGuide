@model EntityLayer.Concretes.Blog

@{
    ViewData["Title"] = "AddBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Blog</h4>
            <form class="forms-sample" method="post">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Başlık</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Blog başlığını giriniz" asp-for="Title">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Kategori</label>
                    <div class="col-sm-9">
                        <select class="form-control" name="CategoryId" asp-for="CategoryId">
                            @await Component.InvokeAsync("AdminAddBlogCategoryListPartial")
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Resim Yolu</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" placeholder="Resim yolunu giriniz" asp-for="ImageUrl">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Tarih</label>
                    <div class="col-sm-9">
                        <input type="date" class="form-control" placeholder="Blog tarihini giriniz" asp-for="Date">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Yazar</label>
                    <div class="col-sm-9">
                        <select class="form-control" name="AuthorId" asp-for="AuthorId">
                            @await Component.InvokeAsync("AdminAddBlogAuthorListPartial")
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">İçerik</label>
                    <div class="col-sm-9">
                        <textarea type="text" class="form-control" cols="30" rows="15" placeholder="Blog içeriğini yazınız" asp-for="Content"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-primary mr-2">Ekle</button>
                <a class="btn btn-outline-secondary mr-2" href="/Blog/Index/">İptal</a>
            </form>
        </div>
    </div>
</div>
