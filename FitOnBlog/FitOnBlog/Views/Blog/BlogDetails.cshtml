@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}

@await Html.PartialAsync("/Views/Blog/BlogCover.cshtml")

<section class="site-section py-lg">

    <div class="container">

        <div class="row blog-entries element-animate">

            <div class="col-md-12 col-lg-8 main-content">

                @await Html.PartialAsync("/Views/Blog/BlogContent.cshtml")

                @await Component.InvokeAsync("BlogCommentListByBlogIdPartial", new { id = ViewBag.id })
            </div>

        </div>

        <div class="col-md-12 col-lg-4 sidebar">

            @await Html.PartialAsync("/Views/Author/AuthorAbout.cshtml")

            @await Component.InvokeAsync("BlogDetailsAuthorPopularBlogsPartial", new { id = ViewBag.authorId })

            @await Component.InvokeAsync("BlogDetailsCategoryListPartial")

        </div>

    </div>

</section>

@await Html.PartialAsync("/Views/Default/OtherFeaturedPosts.cshtml")

@await Html.PartialAsync("/Views/EmailSubscription/AddSubscriber.cshtml")