@using EntityLayer.Concretes
@model List<Comment>

@{
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" :
             User.IsInRole("Yazar") ? "~/Views/Shared/_AuthorLayout.cshtml" :
             "~/Views/Shared/_DefaultLayout.cshtml";
}

@*
    Partial View
*@

<div class="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="timeline">
                        @foreach (var item in Model)
                        {
                            <div class="time-label">
                                <span class="bg-success">@(((DateTime)item.Date).ToString("dd.MM.yyyy"))</span>
                            </div>
                            <div>
                                <i class="fas fa-comment bg-yellow"></i>
                                <div class="timeline-item">
                                    <span class="time"><i class="fas fa-clock"></i> 12:05</span>
                                    <h3 class="timeline-header"><a href="#">@item.Name</a> | @item.Email</h3>
                                    <div class="timeline-body">
                                        @item.CommentText
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <a href="/Blog/Index/" class="btn btn-outline-secondary">Blog Listesine Dön</a>
        </div>
    </section>
</div>
