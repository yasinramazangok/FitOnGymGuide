@using EntityLayer.Concretes
@model List<Comment>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*
    Partial View
*@

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yorumlar</h4>
            <div class="table-responsive pt-3">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Blog Başlığı</th>
                            <th>Adı</th>
                            <th>Yorum</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CommentId</td>
                                <td>@item.Blog?.Title</td>
                                <td>@item.Name</td>
                                <td>@item.CommentText</td>
                                <td>@(((DateTime)item.Date).ToString("dd.MM.yyyy"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <a href="/Blog/Index/" class="btn btn-outline-info">Blog Listesine Dön</a>
        </div>
    </div>
</div>