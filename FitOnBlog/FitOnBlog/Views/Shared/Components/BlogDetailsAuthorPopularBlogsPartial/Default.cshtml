@model List<EntityLayer.Concretes.Blog>

@*
    Partial View
*@

<div class="sidebar-box" style="background:transparent">
    <h3 class="heading" style="color : #fff">Yazarın Diğer Blogları</h3>
    <div class="post-entry-sidebar">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <a href="/Blog/BlogDetails/@item.BlogId/">
                        <img src="@item.ImageUrl" alt="Image placeholder" class="mr-4">
                        <div class="text">
                            <h4 style="color : #fff">@item.Title</h4>
                            <div class="post-meta">
                                <span class="mr-2" style="color : #f36100">@(((DateTime)item.Date).ToString("dd.MM.yyyy"))</span>
                            </div>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>