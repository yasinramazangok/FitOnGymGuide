@using EntityLayer.Concretes
@model List<Author>

<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-5 text-center">
                <h2 style="color : #f36100">Eğitmen Yazarlarımızla Tanışın!</h2>
                <p style="color : #ffff">Alanında uzman bütün eğitmenlerimiz sizler için en önemli bilgileri paylaşıyor ve yorumlarınızı okuyarak geri bildirimlerinizi değerlendiriyor! 😎</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-5 text-center">
                    <img src="@item.ImageUrl" alt="Image" class="img-fluid w-50 rounded-circle mb-4">
                    <h2 class="mb-3 h5" style="color : #f36100">@item.Name</h2>
                    <p style="color : #ffff">@item.About</p>
                    <p>
                        <a href="" target="_blank"><span class="icon-medium p-2"></span></a>
                        <a href="https://www.linkedin.com/in/yasinramazangok/" target="_blank"><span class="icon-linkedin p-2"></span></a>
                        <a href="https://github.com/yasinramazangok" target="_blank"><span class="icon-github p-2"></span></a>
                        <a href="mailto:yasinrmzngok@gmail.com" target="_blank"><span class="icon-envelope p-2"></span></a>
                    </p>
                </div>
            }
        </div>
        <div class="row text-center pt-5 border-top"></div>
    </div>
</div>
