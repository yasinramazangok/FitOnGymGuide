@model EntityLayer.Concretes.Category

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Kategori Güncelleme</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                </div>
            </div>
            <div class="card-body">
                <form class="forms-sample" method="post">
                    @Html.HiddenFor(c => c.CategoryId)
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Kategori Adı</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="Kategori adını giriniz" asp-for="Name">
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Kategori Açıklaması</label>
                        <div class="col-sm-9">
                            <textarea type="text" class="form-control" cols="30" rows="15" placeholder="Kategori açıklamasını yazınız" asp-for="Description"></textarea>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <button type="submit" class="btn btn-outline-primary mr-2">Güncelle</button>
                            <a class="btn btn-outline-secondary mr-2" href="/Category/Index/">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

