@using FitOnBlog.Models
@model LoginViewModel

@{
    ViewData["Title"] = "Giriş";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>FitOn Gym Admin Girişi</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <link href="~/DarkPan/img/fiton-favicon.png" rel="icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/DarkPan/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/DarkPan/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <link href="~/DarkPan/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/DarkPan/css/style.css" rel="stylesheet">
    <style>
        .background {
            background-image: url('/DarkPan/img/1.jpg');
            background-size: cover;
            background-repeat: no-repeat;
        }

        .custom-btn {
            background-color: transparent;
            border: 1px solid #F36100;
            border-radius: 0.25rem;
            color: #F36100;
            padding: 0.5rem 1rem;
            font-size: 0.85rem;
            transition: background-color 0.3s, color 0.3s;
            display: inline-block;
        }

        .button-custom {
            flex: 1;
            margin-left: 25px;
            margin-right: 25px;
            gap: 25px;
        }

            .button-custom:last-child {
                margin-right: 0;
            }

        .button-container {
            display: flex;
            justify-content: space-between;
        }

        .custom-btn:hover {
            background-color: #F36100;
            color: white;
        }

        .font-color {
            color: #F36100;
        }

        .text-danger ul {
            list-style-type: none;
            padding-left: 0;
        }

        .text-danger li {
            display: inline;
        }
    </style>
</head>
<body class="background">
    <div class="container-fluid ">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="bg-transparent rounded p-4 p-sm-5 my-4 mx-3">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a class="navbar-brand brand-logo" href="/Blog/Index/"><img src="~/DarkPan/img/fiton-logo.svg" alt="logo" /></a>
                        <h3>Kullanıcı Girişi</h3>
                    </div>
                    <br />
                    <form asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                        <div class="form-floating mb-3">
                            <input asp-for="Username" type="email" class="form-control" id="floatingInput" placeholder="Email adresinizi giriniz" style="background : #fff">
                            <label asp-for="Username" for="floatingInput" style="color:#f36100">Email</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-floating mb-4">
                            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Şifrenizi giriniz" style="background-color: #fff">
                            <label asp-for="Password" for="floatingPassword" style="color:#f36100">Şifre</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <div>
                                <div class="form-check form-check-inline" style="width:150px">
                                    <input asp-for="Role" type="radio" class="form-check-input" value="Admin" style="background-color: #f36100">
                                    <label class="form-check-label" for="RoleAdmin" style="color:#fff">Admin</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="Role" type="radio" class="form-check-input" value="Yazar" style="background-color: #f36100">
                                    <label class="form-check-label" for="RoleYazar" style="color:#fff">Yazar</label>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div class="form-check">
                                <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="exampleCheck1" style="background-color: #f36100">
                                <label class="form-check-label" for="exampleCheck1" style="color:#fff">@Html.DisplayNameFor(l => l.RememberMe)</label>
                            </div>
                            <a href="" style="color:#fff">Şifrenizi mi unuttunuz?</a>
                        </div>
                        <br />
                        <div class="button-custom button-container">
                            <button type="submit" class="custom-btn custom-btn:hover py-3 w-100 mb-3">Oturum Aç</button>
                            <a class="text-center custom-btn custom-btn:hover py-3 w-100 mb-3" href="/Default/Index/">İptal</a>
                        </div>
                        <br />
                        <p class="text-center mb-0" style="color:#fff">Bir hesabınız yok mu? <a style="color:#f36100" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Hesap Oluştur</a></p>
                    </form>
                    <br />
                    <div asp-validation-summary="ModelOnly" class="text-center text-danger"></div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/DarkPan/lib/chart/chart.min.js"></script>
    <script src="~/DarkPan/lib/easing/easing.min.js"></script>
    <script src="~/DarkPan/lib/waypoints/waypoints.min.js"></script>
    <script src="~/DarkPan/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/DarkPan/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/DarkPan/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/DarkPan/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/DarkPan/js/main.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/localization/messages_tr.min.js"></script>
</body>
</html>

