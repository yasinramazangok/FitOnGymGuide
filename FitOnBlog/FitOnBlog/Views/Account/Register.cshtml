@using FitOnBlog.Models
@model RegisterViewModel

@{
    ViewData["Title"] = "Kayıt";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>FitOn Gym Admin Kayıt</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <!-- Favicon -->
    <link href="~/DarkPan/img/fiton-favicon.png" rel="icon">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Libraries Stylesheet -->
    <link href="~/DarkPan/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/DarkPan/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/DarkPan/css/bootstrap.min.css" rel="stylesheet">
    <!-- Template Stylesheet -->
    <link href="~/DarkPan/css/style.css" rel="stylesheet">
    <style>
        .background {
            background-image: url('/DarkPan/img/trainer-bg.jpg');
            background-size: cover;
            background-repeat: no-repeat;
        }

        .custom-btn {
            background-color: transparent;
            border: 1px solid #F36100;
            border-radius: 0.25rem;
            color: #F36100;
            padding: 0.5rem 1rem;
            font-size: 0.85rem;
            transition: background-color 0.3s, color 0.3s;
            display: inline-block;
        }

        .button-custom {
            flex: 1;
            margin-left: 25px;
            margin-right: 25px;
            gap: 25px;
        }

            .button-custom:last-child {
                margin-right: 0;
            }

        .button-container {
            display: flex;
            justify-content: space-between;
        }

        .custom-btn:hover {
            background-color: #F36100;
            color: white;
        }

        .font-color {
            color: #F36100;
        }

        .text-danger ul {
            list-style-type: none;
            padding-left: 0;
        }

        .text-danger li {
            display: inline;
        }

        .admin-fields {
            display: block;
        }

        .author-fields {
            display: block;
        }
    </style>
</head>
<body class="background">
    <div class="container-fluid ">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="bg-transparent rounded p-4 p-sm-5 my-4 mx-3">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                            <a class="navbar-brand brand-logo" href="/Dashboard/Index/"><img src="~/DarkPan/img/fiton-logo.svg" alt="logo" /></a>
                        </div>
                        <h3>Kullanıcı Kayıt</h3>
                    </div>
                    <br />
                    <form asp-action="Register" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <div>
                                <div class="form-check form-check-inline" style="width:150px">
                                    <input asp-for="Role" type="radio" class="form-check-input" value="Admin" id="RoleAdmin" checked>
                                    <label class="form-check-label" for="RoleAdmin">Admin</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Role" id="RoleYazar" value="Yazar">
                                    <label class="form-check-label" for="RoleYazar">Yazar</label>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="admin-fields">
                            <div class="form-floating mb-3">
                                <input asp-for="Name" type="text" class="form-control" id="floatingInput" placeholder="Adınızı giriniz">
                                <label asp-for="Name" for="floatingInput">Ad Soyad</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="Email adresinizi giriniz">
                                <label asp-for="Email" for="floatingInput">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Şifrenizi giriniz">
                                <label asp-for="Password" for="floatingPassword">Şifre</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingPassword" placeholder="Şifrenizi tekrar giriniz">
                                <label asp-for="ConfirmPassword" for="floatingPassword">Şifre Tekrar</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="author-fields">
                                <div class="form-floating mb-3">
                                    <input asp-for="PhoneNumber" type="text" class="form-control" id="floatingPhone" placeholder="Telefon numaranızı giriniz">
                                    <label asp-for="PhoneNumber" for="floatingPhone">Telefon Numarası</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="ImageUrl" type="text" class="form-control" id="floatingImageUrl" placeholder="Resim URL'sini giriniz">
                                    <label asp-for="ImageUrl" for="floatingImageUrl">Resim URL</label>
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                </div>   
                                <div class="form-floating mb-3">
                                    <input asp-for="Title" type="text" class="form-control" id="floatingTitle" placeholder="Mesleğinizi giriniz">
                                    <label asp-for="Title" for="floatingTitle">Meslek</label>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Expertises" type="text" class="form-control" id="floatingExpertises" placeholder="Uzmanlık alanlarını giriniz">
                                    <label asp-for="Expertises" for="floatingExpertises">Uzmanlık Alanları</label>
                                    <span asp-validation-for="Expertises" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-4">
                                    <textarea asp-for="About" class="form-control" rows="35" cols="30" id="floatingAbout" placeholder="Hakkında bilgisi giriniz"></textarea>
                                    <label asp-for="About" for="floatingAbout">Hakkında</label>
                                    <span asp-validation-for="About" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="button-custom button-container">
                            <button type="submit" class="custom-btn custom-btn:hover py-3 w-100 mb-3">Kaydet</button>
                            <a class="text-center custom-btn custom-btn:hover py-3 w-100 mb-3" href="/Account/Login/">İptal</a>
                        </div>
                        <p class="text-center mb-0">Bir hesabınız var mı? <a class="font-color" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Giriş yapın</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Template Javascript -->
    <script src="~/DarkPan/js/main.js"></script>
    <!-- jQuery Validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <!-- Role Selection Logic -->
    <script>
        $(document).ready(function () {
            if ($("#RoleAdmin").prop("checked")) {
                $(".admin-fields").show();
                $(".author-fields").hide();
            } else {
                $(".admin-fields").hide();
                $(".author-fields").show();
            }
            $("input[type='radio'][name='Role']").on("change", function () {
                if ($("#RoleAdmin").prop("checked")) {
                    $(".admin-fields").show();
                    $(".author-fields").hide();
                } else {
                    $(".admin-fields").show();
                    $(".author-fields").show();
                }
            });
        });
    </script>
</body>
</html>


